{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@enum/*": ["src/enum/*"],
      "@util/*": ["src/util/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "lib": ["ES2022", "DOM"]
}
